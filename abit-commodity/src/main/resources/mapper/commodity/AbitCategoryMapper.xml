<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abit.commodity.mapper.AbitCategoryMapper">
    
    <resultMap type="AbitCategory" id="AbitCategoryResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="pid"    column="pid"    />
        <result property="createTime"    column="create_time"    />
        <result property="description"    column="description"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectAbitCategoryVo">
        select id, name, pid, create_time, description,status from abit_category
    </sql>

    <select id="selectAbitCategoryList" parameterType="AbitCategory" resultMap="AbitCategoryResult">
        <include refid="selectAbitCategoryVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>

    </select>
    
    <select id="selectAbitCategoryById" parameterType="Long" resultMap="AbitCategoryResult">
        <include refid="selectAbitCategoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAbitCategory" parameterType="AbitCategory">
        insert into abit_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="pid != null">pid,</if>
            <if test="createTime != null">create_time,</if>
            <if test="description != null">description,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="pid != null">#{pid},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <update id="updateAbitCategory" parameterType="AbitCategory">
        update abit_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="pid != null">pid = #{pid},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAbitCategoryById" parameterType="Long">
        delete from abit_category where id = #{id}
    </delete>

    <delete id="deleteAbitCategoryByIds" parameterType="String">
        delete from abit_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>